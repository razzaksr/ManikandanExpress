<p class="display-3 text-primary">{{pageTitle}}</p>
<form action="/techie" method="POST" class="rounded shadow p-5">
    <input type="hidden" name="_id" value="{{obj._id}}">
    <div class="form-group">
        <label>Full name</label>
        <input type="text" class="form-control" placeholder="fullname please" name="fullname" value="{{obj.fullname}}">
    </div>
    <div class="form-group">
        <label>Contact</label>
        <input type="number" class="form-control" placeholder="Contact please" name="contact" value="{{obj.contact}}">
    </div>
    <div class="form-group">
        <label>Expert In</label>
        <input type="text" class="form-control" placeholder="Expert on technology" name="expert" value="{{obj.expert}}">
    </div>
    <div class="row">
        <div class="col form-group">
            <label>Experience</label>
            <input type="text" class="form-control" placeholder="experience please" name="experience" value="{{obj.experience}}">
        </div>
        <div class="col form-group">
            <label>Commercials</label>
            <input type="text" class="form-control" placeholder="commercials please" name="commercials" value="{{obj.commercials}}">
        </div>
    </div>
    <div class="row justify-content-around mt-5">
        <button type="submit" class="col-4 btn btn-outline-info">
            <i class="fas fa-angle-double-right"></i>
        </button>
        <a href="/techie/show" class="col-4 btn btn-success">
            <i class="fa fa-database"></i>
        </a>
        <button type="reset" class="col-4 btn btn-outline-danger">Clear</button>
    </div>
</form>


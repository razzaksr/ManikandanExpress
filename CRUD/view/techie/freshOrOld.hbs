<p class="display-3 text-primary">{{pageTitle}}</p>
<form action="/techie" method="POST" class="rounded shadow p-5">
    <div class="form-group">
        <label>Full name</label>
        <input type="text" class="form-control" placeholder="fullname please" name="fullname">
    </div>
    <div class="form-group">
        <label>Contact</label>
        <input type="number" class="form-control" placeholder="Contact please" name="contact">
    </div>
    <div class="form-group">
        <label>Expert In</label>
        <input type="text" class="form-control" placeholder="Expert on technology" name="expert">
    </div>
    <div class="row">
        <div class="col form-group">
            <label>Experience</label>
            <input type="text" class="form-control" placeholder="experience please" name="experience">
        </div>
        <div class="col form-group">
            <label>Commercials</label>
            <input type="text" class="form-control" placeholder="commercials please" name="commercials">
        </div>
    </div>
    <div class="row justify-content-around mt-5">
        <button type="submit" class="col-4 btn btn-outline-info">Insert</button>
        <button type="reset" class="col-4 btn btn-outline-danger">Clear</button>
    </div>
</form>

